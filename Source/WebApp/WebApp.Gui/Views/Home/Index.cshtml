@using Core.Application;
@model List<UserViewModel>
@{
  ViewData["Title"] = "Home Page";
}

<div class="flex items-start justify-center mt-5 mx-auto w-3/6">
  <div class="w-10/12">

    <!-- Create a post section -->
    <div class="flex justify-start items-center w-full">
      <div class="w-full">
        <div class="bg-white p-2 flex flex-row justify-evenly items-center w-full mx-auto rounded-md">
          <div class="w-10 mr-5">
            <img src="https://i.pinimg.com/736x/b9/b5/fb/b9b5fbe0ce482fb220303222f70fcac0.jpg" alt="pfp"
              class="w-9 rounded-md">
          </div>
          <div class="w-full">
            <a href="#" class="">
              <div>
                <input type="search" class="border border-gray-300 bg-stone-100 rounded-md w-full p-1 ps-5"
                  placeholder="Tell the world what you're thinking on" />
              </div>
            </a>
          </div>
          <div class="w-fit flex flex-row ms-2">
            <a href="#" class="hover:text-blue-500"><i class="ri-image-line text-2xl"></i></a>
            <a href="#" class="hover:text-blue-500"><i class="ri-link text-2xl ms-4"></i></a>
          </div>
        </div>
      </div>
    </div>
    <!-- Create a post section -->

    <!-- Filters -->
    <div class="mt-4 flex justify-start items-center">
      <div class="w-full mx-auto">
        <div class="bg-white p-2 flex flex-row items-center w-full mx-auto rounded-md justify-between">
          <div class="font-bold text-gray-500 flex justify-between items-center w-full">
            <div class="flex items-center justify-center"><a href="#" class="hover:text-blue-500"><i
                  class="ri-rocket-2-line"></i>Best</a>
            </div>
            <div class="flex items-center justify-center"><a href="#" class="hover:text-blue-500"><i
                  class="ri-fire-line"></i>Hot</a>
            </div>
            <div class="flex items-center justify-center"><a href="#" class="hover:text-blue-500"><i
                  class="ri-error-warning-line"></i>New</a>
            </div>
            <div class="flex items-center justify-center"><a href="#" class="hover:text-blue-500"><i
                  class="ri-arrow-up-double-line"></i>Top</a>
            </div>
            <div class="flex items-center justify-center"><a href="#" class="hover:text-blue-500"><i
                  class="ri-menu-3-line"></i></a></div>
          </div>
          <div class="font-bold text-gray-500 flex justify-end items-end w-full">
            <div><a href="#" class="hover:text-blue-500"><i class="ri-checkbox-multiple-blank-line text-2xl"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Filters -->

    @if (Model.Count != 0 && Model != null)
    {
      @foreach (var item in Model)
      {
        @foreach (var post in item.Posts)
        {
          <!-- POST -->
          <div class="mt-5 flex items-center justify-center">
            <div class="w-full mx-auto">
              <div class="bg-white p-2 flex flex-col items-start w-full mx-auto rounded-md">
                <div class="flex items-start border-b mb-5">
                  <div class="font-bold">
                    <div class="flex items-center justify-center text-xl font-extrabold hover:bg-gray-200 text-gray-500">
                      <a href="#"><i class="ri-arrow-up-fill"></i></a>
                    </div>
                    <div class="flex items-center justify-center text-gray-500">0</div>
                    <div class="flex items-center justify-center text-xl font-extrabold hover:bg-gray-200 text-gray-500">
                      <a href="#"><i class="ri-arrow-down-fill"></i></a>
                    </div>
                  </div>

                  <div class="flex items-start justify-start flex-col w-fit ms-5">
                    <div class="w-full flex items-center">
                      <img src="https://avatarfiles.alphacoders.com/367/367013.jpeg" class="w-9 mr-2 rounded-sm">
                      <p class="text-sm">Posted by <span class="font-bold">@item.Name</span> <span
                          class="text-gray-400">@post.Created</span></p>
                    </div>
                    <div class="w-fit mt-5 mb-5">
                      <h4 class="mb-2 text-xl font-bold">@post.Title</h4>
                      <p class="text-sm">@post.Description</p>
                    </div>
                    <div>
                      <img src="@post.ImagePath" class="w-full" alt="">
                    </div>
                    <div class="w-80 flex justify-between flex-row mt-5 font-bold">
                      <div class="hover:bg-gray-200 p-2 rounded-md text-gray-500"><a href="#"><i
                            class="ri-message-2-line mr-1"></i>Comments</a>
                      </div>
                      <div class="hover:bg-gray-200 p-2 rounded-md text-gray-500"><a href="#"><i
                            class="ri-share-forward-line mr-1"></i>Share</a></div>
                      <div class="hover:bg-gray-200 p-2 rounded-md text-gray-500"><a href="#"><i
                            class="ri-bookmark-line mr-1"></i>Save</a>
                      </div>
                      <div class="flex items-center justify-center hover:bg-gray-200 p-2 rounded-md text-gray-500"><a
                          href="#"><i class="ri-menu-3-line"></i></a></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- POST -->
        }
      }
    }

  </div>
  <div class=" w-96 pl-9">
    <div class="w-full">

      <!-- TRY SOCIAL NETWORK PREMIUM -->
      <div class="bg-white rounded-sm p-2 flex flex-col">
        <div class="flex justify-between">
          <i class="ri-service-line text-2xl font-bold"></i>
          <div class="flex flex-col justify-around text-sm ms-2">
            <p class="text-gray-500 font-bold">Social Network Premium</p>
            <span class="text-gray-600">The best Social Network Experience.</span>
          </div>
        </div>
        <div class="w-full text-center mt-2 flex">
          <a href="#" class="p-1 bg-orange-500 text-white rounded-xl w-full">Something</a>
        </div>
      </div>
      <!-- TRY SOCIAL NETWORK PREMIUM -->

      <!-- PERSONAL INTERESTS -->
      <div
        class="bg-white rounded-sm pt-5 mt-4 bg-[url('https://w0.peakpx.com/wallpaper/106/1007/HD-wallpaper-artistic-pixel-art.jpg')]">
        <div class="bg-white mt-2 p-2">
          <!-- <div><img src="https://w0.peakpx.com/wallpaper/106/1007/HD-wallpaper-artistic-pixel-art.jpg"
                class="cotain w-full" alt=""></div> -->
          <div class="flex items-center">
            <img src="https://i.pinimg.com/736x/b9/b5/fb/b9b5fbe0ce482fb220303222f70fcac0.jpg" alt="pfp"
              class="w-12 rounded-md mr-2 mt-2 mb-2">
            <span>Home</span>
          </div>
          <div class="border-b-2">
            <p class="text-sm text-gray-500">Your personal Social Network frontpage. Come here to check in with your
              favorite
              communities.</p>
          </div>
          <div class="flex flex-col justify-around items-center">
            <a href="#" class="border p-1 mt-2 rounded-md bg-blue-500 text-white w-4/5 text-center">Create a post</a>
            <a href="#"
              class="border border-blue-500 border-1 p-1 mt-2 rounded-md text-blue-500 w-4/5 text-center mb-2">Create
              Comunnity</a>
          </div>
        </div>
      </div>
      <!-- PERSONAL INTERESTS -->

      <!-- RIGHTS AND USER'S AGREEMNTS -->
      <div class="bg-white rounded-sm mt-4 p-3">
        <div class="flex justify-between w-72 mx-auto p-2 border-b-2">
          <div class="text-xs flex flex-col justify-between">
            <a href="#">User agreement</a>
            <a href="#" class="">Privacy Policy</a>
          </div>
          <div class="text-xs ms-2 flex flex-col justify-between h-12">
            <a href="#">Content Policy</a>
            <a href="#">Moderator Code of Conduct</a>
          </div>
        </div>
        <div class="flex justify-between w-72 mx-auto p-2 border-b-2">
          <div class="text-xs flex flex-col justify-between">
            <a href="#">English</a>
            <a href="#" class="">Mario bros</a>
          </div>
          <div class="text-xs ms-2 flex flex-col justify-between h-12">
            <a href="#">Spanish</a>
            <a href="#">Brutalis</a>
          </div>
        </div>
        <div class="flex justify-between w-72 mx-auto p-2">
          <span class="text-gray-500 text-xs">Andelson Lopez, practice website all rights to Reddit Inc.</span>
        </div>
      </div>
      <!-- RIGHTS AND USER"S AGREEMNTS -->

    </div>
  </div>
</div>