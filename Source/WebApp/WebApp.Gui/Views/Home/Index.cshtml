@using Core.Application;
@model List<UserViewModel>
@{
  ViewData["Title"] = "Home Page";
}

<div class="flex items-start justify-center mt-6 mx-auto min-[1000px]:w-8/12 w-full">

  <!-- LEFT SIDE CONTENT -->
  <div class="w-96 justify-center h-screen hidden min-[950px]:flex ms-5">
    <div class="w-fit">

      <!-- Topics, and some other options (mainly when user is not logged) -->
      <div class="bg-white rounded-md p-5">

        <div class="flex flex-col border-b border-gray-300 p-2 items-start justify-center">
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500"><i
              class="ri-home-smile-line text-2xl mr-3"></i>Home</a>
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500"><i
              class="ri-fire-line text-2xl mr-3"></i>Popular</a>
        </div>

        <div class="flex flex-col border-b border-gray-300 p-2 items-start justify-center">
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500"><i
              class="ri-gamepad-line text-2xl mr-3"></i>Gaming</a>
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500"><i
              class="ri-ping-pong-line text-2xl mr-3"></i>ESports</a>
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500"><i
              class="ri-macbook-line text-2xl mr-3"></i>Programming</a>
        </div>

        <div class="flex flex-col p-2 items-start justify-center">
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500 text-sm">About Social Network</a>
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500 text-sm mt-2">Advertise</a>
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500 text-sm mt-2">Blog</a>
          <a href="#" class="hover:text-blue-400 font-bold text-gray-500 text-sm mt-2">See more</a>
        </div>

      </div>
      <!-- Topics, and some other options (mainly when user is not logged) -->

    </div>
  </div>

  <!-- CENTRAL CONTENT -->
  <div class="w-full min-[950px]:w-100 min-[600px]:mr-5 min-[600px]:ms-5 min-[600px]:mb-5 min-[950px]:pl-0">

    <!-- Create a post section -->
    <div class="flex justify-start items-center w-full">
      <div class="w-full">
        <div class="bg-white p-2 flex flex-row justify-evenly items-center w-full mx-auto min-[600px]:rounded-md">
          <div class="w-fit mr-1">
            <img src="https://i.pinimg.com/736x/b9/b5/fb/b9b5fbe0ce482fb220303222f70fcac0.jpg" alt="pfp"
              class="w-14 rounded-full">
          </div>
          <a href="#" class="w-full">
            <div>
              <input type="search" class="border border-gray-300 bg-stone-100 rounded-md w-full p-1 ps-5"
                placeholder="Tell the world what you're thinking on" />
            </div>
          </a>
          <div class="w-fit flex flex-row ms-2">
            <a href="#"><i class="ri-image-line text-2xl"></i></a>
            <a href="#"><i class="ri-link text-2xl ms-4"></i></a>
          </div>
        </div>
      </div>
    </div>
    <!-- Create a post section -->

    <!-- Filters -->
    <div class="mt-5 flex justify-start items-center">
      <div class="w-full mx-auto">
        <div class="bg-white p-2 flex flex-row items-center w-full mx-auto min-[600px]:rounded-md justify-between">
          <div class="font-bold text-gray-500 justify-start flex min-[400px]:justify-evenly items-center w-full">
            <div
              class="flex items-center justify-center max-[400px]:border p-1 max-[400px]:rounded-full max-[400px]:bg-gray-100 max-[400px]:text-blue-400">
              <a href="#"><i class="ri-rocket-2-line"></i>Best</a>
            </div>
            <div class="hidden min-[400px]:flex items-center justify-center"><a href="#"><i
                  class="ri-fire-line"></i>Hot</a>
            </div>
            <div class="hidden min-[400px]:flex items-center justify-center"><a href="#"><i
                  class="ri-error-warning-line"></i>New</a>
            </div>
            <div class="hidden min-[400px]:flex items-center justify-center"><a href="#"><i
                  class="ri-arrow-up-double-line"></i>Top</a>
            </div>
            <div class="hidden min-[400px]:flex items-center justify-center"><a href="#"><i
                  class="ri-menu-3-line"></i></a></div>
          </div>
          <div class="font-bold text-gray-500 hidden min-[400px]:flex justify-end items-end w-40">
            <div><a href="#"><i class="ri-checkbox-multiple-blank-line text-2xl"></i></a></div>
          </div>
        </div>
      </div>
    </div>
    <!-- Filters -->

    <!-- POST -->
    <div class="mt-5 flex items-center justify-center">
      <div class="w-full mx-auto">
      </div>
    </div>
    <!-- POST -->

  </div>

  <!-- RIGHT SIDE CONTENT -->
  <div class="w-96 h-screen hidden min-[950px]:flex justify-center">
    <div class="w-fit ml-5 mr-5 min-[1250px]:w-80">

      <!-- TRY SOCIAL NETWORK PREMIUM -->
      <div class="bg-white rounded-sm p-5 flex flex-col">
        <div class="flex justify-between">
          <i class="ri-service-line text-2xl font-bold"></i>
          <div class="flex flex-col justify-around text-sm ms-2">
            <p class="text-gray-500 font-bold">Social Network Premium</p>
            <span class="text-gray-600">The best Social Network Experience.</span>
          </div>
        </div>
        <div class="w-full text-center mt-2 flex">
          <a href="#" class="p-1 bg-orange-500 text-white rounded-xl w-full">Something</a>
        </div>
      </div>
      <!-- TRY SOCIAL NETWORK PREMIUM -->

      <!-- PERSONAL INTERESTS -->
      <div
        class="bg-white rounded-sm pt-5 mt-5 bg-[url('https://w0.peakpx.com/wallpaper/106/1007/HD-wallpaper-artistic-pixel-art.jpg')]">
        <div class="bg-white mt-5 p-2">
          <!-- <div><img src="https://w0.peakpx.com/wallpaper/106/1007/HD-wallpaper-artistic-pixel-art.jpg"
                class="cotain w-full" alt=""></div> -->
          <div class="flex items-center">
            <img src="https://i.pinimg.com/736x/b9/b5/fb/b9b5fbe0ce482fb220303222f70fcac0.jpg" alt="pfp"
              class="w-12 rounded-md mr-2 mt-2 mb-2">
            <span>Home</span>
          </div>
          <div class="border-b-2">
            <p class="text-sm text-gray-500">Your personal Social Network frontpage. Come here to check in with your
              favorite
              communities.</p>
          </div>
          <div class="flex flex-col justify-around items-center">
            <a href="#" class="border p-1 mt-2 rounded-md bg-blue-500 text-white w-4/5 text-center">Create a post</a>
            <a href="#" class="border p-1 mt-2 rounded-md bg-blue-500 text-white w-4/5 text-center mb-2">Create
