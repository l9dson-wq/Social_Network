@using Microsoft.AspNetCore.Http;
@using static Core.Application.SessionHelper;
@using Core.Application;
@inject IHttpContextAccessor iHttpContext;
@{
  UserProfileViewModel userSession = iHttpContext.HttpContext.Session.Get<UserProfileViewModel>("userProfile");
}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - WebApp.Gui</title>
  <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body class="bg-slate-300">

  <!-- NAVBAR -->
  <div class="w-full flex items-center justify-center border border-1 bg-white sticky top-0 z-40">
    <div class="w-full flex flex-row justify-between items-center">

      <div class="ml-1 w-fit flex items-center justify-around flex-1">
        <div class="flex-1">
          <a class="text-xl font-bold" asp-controller="Home" asp-action="Index">
            S<span class="hidden lg:inline">ocial</span>
            <span class="text-orange-500 text-xl">
              N<span class="hidden lg:inline">etwork</span>
            </span>
          </a>
        </div>
        <div
          class="mr-3 p-1 justify-between items-center flex-1 hover:outline outline-1 outline-slate-300 hidden xl:flex">
          <a href="#" class="">
            <i class="ri-home-4-line text-xl font-normal">
            </i>
            Home
          </a>
          <a class="inline mx-2" asp-controller="Home" asp-action="Index"><i
              class="ri-arrow-down-s-line min-[600px]:text-2xl text-3xl"></i></a>
        </div>
      </div>

      @* Search bar *@
      <div class="w-20 sm:w-72 xl:w-6/12 min-[810px]:mr-5 min-[420px]:pr-3:pl-3 flex-1 hidden min-[600px]:inline">
        <input type="search" class="bg-gray-100 p-2 rounded-full w-full px-3 text-sm" />
      </div>
      @* Search bar *@

      <div class="flex items-center justify-end w-fit flex-1 p-1">
        <a class="min-[600px]:hidden inline mx-2" asp-controller="Home" asp-action="Index"><i
            class="ri-search-line  text-3xl"></i></a>
        @if (userSession != null)
        {
          <div class="">
            <a href="#">
              <i class="ri-chat-3-line text-3xl"></i>
            </a>
          </div>
          <div class="ms-2">
            <a href="#">
              <i class="ri-notification-3-line text-3xl"></i>
            </a>
          </div>
          <div class="ms-2">
            <a href="#">
              <i class="ri-add-circle-line text-3xl"></i>
            </a>
          </div>
        }
        <div class="ms-1">
          <div class="flex items-center justify-evenly p-1">
            @if (userSession != null)
            {
              <img src="@userSession.ProfilePicturePath" alt="profile picture"
                class="w-8 ml-2 min-[600px]:mr-2 rounded-md" />
              <div class="flex items-center flex-col justify-evenly">
                <p class="hidden min-[950px]:inline text-sm font-bold">@userSession.UserName</p>
                <span class="text-sm hidden 2xl:inline">0 Karma</span>
              </div>

              <button id="openModal" class="min-[900px]:ms-5 ms-1 mr-2 ml-2 bg-transparent">
                <i class="ri-arrow-down-s-line text-xl"></i>
              </button>

              <!-- Modal -->
              <div id="myModal" class="modal hidden fixed top-7 right-0 m-4 p-4 bg-white border border-gray-500 rounded">

                <span id="closeModal" class="modal-close cursor-pointer float-right">
                  <i class="ri-close-circle-line text-2xl"></i>
                </span>

                <!-- Contenido del modal -->
                <div class="modal-content">

                  <div class="">
                    <div class="border-b pb-2 border-1  border-gray-500">
                      <a class="hover:text-blue-400 font-bold text-gray-700" asp-controller="Home" asp-action="Index">
                        <i class="ri-home-smile-line text-xl mr-3"></i>Home
                      </a>
                      <a href="#" class="hover:text-blue-400 font-bold text-gray-700">
                        <i class="ri-fire-line text-xl mr-3"></i>Popular
                      </a>
                    </div>
                    <div class="flex flex-col p-2 items-start justify-center">
                      <a href="#" class="hover:text-blue-400 font-bold text-gray-700 text-sm">About</a>
                      <a href="#" class="hover:text-blue-400 font-bold text-gray-700 text-sm mt-2">Advertise</a>
                      <a href="#" class="hover:text-blue-400 font-bold text-gray-700 text-sm mt-2">Blog</a>
                      <a href="#" class="hover:text-blue-400 font-bold text-gray-700 text-sm mt-2">See more</a>
                      <a class="hover:text-red-400 font-bold text-gray-700 text-sm mt-2" asp-controller="Login"
                        asp-action="LogOut">Log out</a>
                    </div>
                  </div>

                </div>
              </div>
            }
            @if (userSession == null)
            {
              @*<a asp-controller="Login" asp-action="Register"
            class="p-2 bg-orange-500 text-white cursor-pointer rounded-full font-bold text-sm">Sign up</a>*@
              <a class="p-2 ms-2 font-bold bg-transparent text-orange-500 border border-orange-500 cursor-pointer rounded-full text-sm"
                asp-controller="Login" asp-action="Index">
                Log in
              </a>
            }
          </div>

        </div>
      </div>

    </div>
  </div>
  <!-- NAVBAR -->


  <main role="main">
    @RenderBody()
  </main>

  <footer class="border-top footer text-muted">
    <div class="container">

    </div>
  </footer>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    var modal = document.getElementById('myModal');

    document.getElementById('openModal').addEventListener('click', function (event) {
      event.stopPropagation(); // Evitar que el clic llegue al documento y active el cierre del modal
      modal.classList.remove('hidden');
      // Agregar un escuchador de clic al documento para cerrar el modal si se hace clic fuera de él
      document.addEventListener('click', closeModalOutside);
    });

    document.getElementById('closeModal').addEventListener('click', function () {
      modal.classList.add('hidden');
      // Remover el escuchador de clic al cerrar el modal
      document.removeEventListener('click', closeModalOutside);
    });

    // Función para cerrar el modal si se hace clic fuera de él
    function closeModalOutside(event) {
      if (!modal.contains(event.target)) {
        modal.classList.add('hidden');
        document.removeEventListener('click', closeModalOutside);
      }
    }
  </script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>